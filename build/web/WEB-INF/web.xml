<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>SchoolServlet</servlet-name>
        <servlet-class>Servlet.SchoolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SchoolServlet</servlet-name>
        <url-pattern>/SchoolServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RestSchoolServlet</servlet-name>
        <servlet-class>Servlet.RestSchoolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestSchoolServlet</servlet-name>
        <url-pattern>/RestSchoolServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-role>
        <description/>
        <role-name>Admin</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>User</role-name>
    </security-role>
</web-app>
